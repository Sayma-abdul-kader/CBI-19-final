<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#FFDAB9" /> <!-- Light pink color -->
            <padding android:left="4dp" android:right="4dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>
    <item android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#E0E0E0" /> <!-- Shadow color -->
        </shape>
    </item>
</layer-list>
